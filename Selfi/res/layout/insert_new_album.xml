<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/txt_album_new_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/album_add_placeholder_title"
        android:inputType="textPersonName" >
        <requestFocus />
     </EditText>

    <EditText
        android:id="@+id/txt_album_new_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_album_new_title"
        android:layout_alignRight="@+id/txt_album_new_title"
        android:layout_below="@+id/txt_album_new_title"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="@string/add_album_placeholder_description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
