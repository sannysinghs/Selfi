<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/txt_album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_album_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/txt_album_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_album_title"
        android:layout_marginTop="3dp"
        android:text="@string/txt_album_desc"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_album_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_album_desc"
        android:layout_alignLeft="@+id/txt_album_desc"
        android:layout_below="@+id/txt_album_desc"
        android:visibility="invisible" />
</RelativeLayout>
